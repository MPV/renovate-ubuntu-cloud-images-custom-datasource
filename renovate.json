{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.pkr\\.hcl$"],
      "depNameTemplate": "{{#if depName}}{{{depName}}}{{else}}base{{/if}}",
      "datasourceTemplate": "custom.ubuntu",      
      "versioningTemplate": "docker"
    }
  ],
	"customDatasources": {
    "ubuntu-html": {
      "defaultRegistryUrlTemplate": "https://cloud-images.ubuntu.com/releases/22.04/",
      "format": "html"
    },
    "ubuntu-json": {
      "defaultRegistryUrlTemplate": "https://cloud-images.ubuntu.com/releases/streams/v1/com.ubuntu.cloud:released:download.json",
      "format": "json"
    }
  },
  "packageRules": [
    {
      "description": ["https://github.com/renovatebot/renovate/discussions/29815"],
      "matchDatasource": "
    }
  ]
}
